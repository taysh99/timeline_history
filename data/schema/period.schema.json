{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/period.schema.json",
  "title": "History Period Item",
  "type": "object",
  "required": [
    "id",
    "country",
    "type",
    "name",
    "startYear",
    "endYear",
    "grades",
    "topics",
    "summary",
    "sourceIds"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]+$"
    },
    "country": {
      "type": "string",
      "enum": [
        "VN",
        "CN"
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "period",
        "dynasty",
        "event",
        "war",
        "era"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 2
    },
    "startYear": {
      "type": "integer",
      "minimum": -3000,
      "maximum": 3000
    },
    "endYear": {
      "type": "integer",
      "minimum": -3000,
      "maximum": 3000
    },
    "eraLabel": {
      "type": "string"
    },
    "grades": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "L6",
          "L7",
          "L8",
          "L9",
          "L10",
          "L11",
          "L12"
        ]
      },
      "minItems": 1
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "politics",
          "military",
          "culture",
          "economy",
          "society",
          "diplomacy",
          "science_tech",
          "religion",
          "law"
        ]
      },
      "minItems": 1
    },
    "summary": {
      "type": "string",
      "minLength": 10,
      "maxLength": 400
    },
    "content": {
      "type": "object",
      "required": [
        "events",
        "figures",
        "achievements"
      ],
      "properties": {
        "events": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/textItem"
          }
        },
        "figures": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/textItem"
          }
        },
        "achievements": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/textItem"
          }
        }
      },
      "additionalProperties": false
    },
    "sourceIds": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "overlapAllowed": {
      "type": "boolean",
      "default": false
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "textItem": {
      "type": "object",
      "required": [
        "title",
        "detail"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        },
        "detail": {
          "type": "string",
          "minLength": 5,
          "maxLength": 800
        }
      },
      "additionalProperties": false
    }
  }
}